---
import DashboardLayout from "@layouts/Layout.Dashboard.astro";
import FinanceForm from "../../components/FinanceForm.astro";
import FinanceRecently from "../../components/ListView.astro/RecentlyListView.astro";
---

<DashboardLayout>
  <div class="p-10">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-[32px] font-bold text-gray-900">Dashboard</h1>
      <p class="text-base text-gray-600 mt-2">
        Resumen de tu actividad financiera
      </p>
    </div>

    <!-- Main Content -->
    <div class="flex gap-6">
      <!-- Form Section -->
      <div class="w-[380px] flex-shrink-0">
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <div class="mb-6">
            <h2 class="text-xl font-bold text-gray-900">Nueva Transacción</h2>
            <p class="text-sm text-gray-600 mt-1">
              Registra una nueva transacción
            </p>
          </div>
          <FinanceForm />
        </div>
      </div>

      <!-- Recent Transactions -->
      <div class="flex-1">
        <div class="bg-white rounded-xl border border-gray-200 p-6">
          <div class="mb-6">
            <h2 class="text-xl font-bold text-gray-900">
              Transacciones Recientes
            </h2>
            <p class="text-sm text-gray-600 mt-1">
              Transacciones de tus ingresos y gastos
            </p>
          </div>
          <FinanceRecently />
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
