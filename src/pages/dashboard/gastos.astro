---
import LayoutDashboard from "@layouts/Layout.Dashboard.astro";
import ExpensesListView from "@components/ListView.astro/ExpensesListView.astro";
import FinanceTotals from "@components/FinanceTotals.astro";
---

<LayoutDashboard>
  <div class="p-10">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-[32px] font-bold text-gray-900">
        Transacciones de Gastos
      </h1>
      <p class="text-base text-gray-600 mt-2">
        Listado completo de tus transacciones de gastos
      </p>
    </div>

    <!-- Stats Cards -->
    <div class="mb-8">
      <FinanceTotals />
    </div>

    <!-- Table Container -->
    <div class="bg-white rounded-xl border border-gray-200">
      <ExpensesListView />
    </div>
  </div>
</LayoutDashboard>
