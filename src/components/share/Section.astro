---
import IconComponent from "@components/Icons/IconComponent.astro";

const { title, description } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md flex flex-col gap-8">
  <div class="flex flex-wrap items-center gap-3">
    <div
      class="w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center mr-3"
    >
      <IconComponent color="indigo-600" sizeX="24" sizeY="24">
        <slot name="icon" />
      </IconComponent>
    </div>
    <div>
      <h3 class="text-lg font-semibold text-gray-900">
        {title}
      </h3>
      <p class="text-sm text-gray-600">
        {description}
      </p>
    </div>
  </div>

  <slot name="content" />
</div>
