---
import LayoutDashboard from "@layouts/Layout.Dashboard.astro";
import FinanceCharts from "@components/FinanceCharts.astro";
import Box from "@components/share/Box.astro";
---

<LayoutDashboard>
  <div class="p-10">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-[32px] font-bold text-gray-900">Gráficos</h1>
      <p class="text-base text-gray-600 mt-2">
        Visualización de tus ingresos y gastos
      </p>
    </div>

    <!-- Charts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
      <FinanceCharts />
    </div>
  </div>
</LayoutDashboard>
