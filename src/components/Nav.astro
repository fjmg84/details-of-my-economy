import IncomeIcon from "./Icons/IncomeIcon.astro";
import AddIcon from "./Icons/AddIcon.astro";
---

<nav class="hidden md:flex flex-col mt-4">
  <a
    href="/dashboard/"
    class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium flex items-center"
  >
    <AddIcon sizeX="4" sizeY="4" color="currentColor" />
    <span class="ml-2">Agregar Transacci√≥n</span></a
  >
  <a
    href="/dashboard/income"
    class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium flex items-center"
  >
    <IncomeIcon sizeX="4" sizeY="4" color="currentColor" />
